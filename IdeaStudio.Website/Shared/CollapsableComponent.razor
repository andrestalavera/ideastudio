<div>
    <div class="d-flex" style="justify-content:space-between" @onclick="@Toggle">
        <span class="text-muted">@(Collapsed ? "View" : "Hide") @Title</span>
        @if (Collapsed)
        {
            <i class="fa-solid fa-chevron-down me-1"></i>
        }
        else
        {
            <i class="fa-solid fa-chevron-up me-1"></i>
        }
    </div>
    <div class="@contentClass">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool Collapsed { get; set; } = true;
    [Parameter] public string? Title { get; set; }

    private string contentClass => Collapsed ? "collapsible" : "expandable";

    void Toggle() => Collapsed = !Collapsed;
}